@model Bookish.Models.View.LibraryViewModel

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<h2>Library of Books</h2>
<a class="myButton" asp-controller="Library" asp-action="CreateLibraryBookPage" >Create a new book</a>
<section>
    <input type="text" id="searchByTitle" name="searchByTitle" placeholder="Search By Title" oninput="SearchByFunction()"/>
</section>
<section id="all-books" class="library-container">
    @foreach (var book in @Model.Library)
    {
        <a class="book-container" asp-controller="Library" asp-action="LibraryBook" 
           asp-route-id="@book.book_id">
        <img class="book-image" src=@book.image alt="book image"/>
            <p class="book-meta">@book.title</p>
            <p class="book-meta">by @book.author</p>
            <p class="book-meta">@book.genre</p>
            <p class="book-meta">Published @book.year_published</p>
        </a>
    }
</section>

